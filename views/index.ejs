<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap Form Centering</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
      <div class="row">
        <div class="col-md-12"> <!-- Adjusted column size for a wider form -->
            <h1 class="text-center mb-4 fs-4">TO DO</h1>
          <form action="/addTodo" method="POST" class="bg-light p-4 rounded shadow">
            <div class="mb-3 row">
              <div class="col-sm-4">
                <label for="input1" class="form-label">Product Name:</label>
              </div>
              <div class="col-sm-8">
                <input type="text" id="pro_name" name="pro_name" class="form-control" required>
              </div>
            </div>
  
            <div class="mb-3 row">
              <div class="col-sm-4">
                <label for="input2" class="form-label">Product Type:</label>
              </div>
              <div class="col-sm-8">
                <input type="text" id="pro_type" name="pro_type" class="form-control" required>
              </div>
            </div>
            
            <div class="text-end">
              <button type="submit" class="btn btn-primary btn-sm">Save</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
